.zent-date-range-picker__btn {
  margin-left: 15px;
  display: inline-block;
  padding: 2px 4px;
  font-size: 12px;
  color: #333;
  cursor: pointer;
  box-sizing: border-box;
  border: 1px solid transparent;
  border-radius: 2px;

  &:hover {
    color: #38f;
  }

  &.active {
    border-color: #38f;
    color: #38f;
  }
}
